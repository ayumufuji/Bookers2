<div class="container">  <!-- この行を追加 -->
  <div class="row">
<div class="col-xs-3">
<%= render 'layouts/list', user: @user %>
 </div>


<div class="col-xs-9 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
  <thead>
      <th></th>
　　  <th>title</th>
　　  <th>body</th>
      <th colspan="3"></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
    <td>
　　   <%= link_to user_path(book.user) do %>
          <%= attachment_image_tag @user, :profile_image, size: '50x50', fallback: "no_image.jpg" %>
       <%end %>
    </td>
　　<td><%= link_to book.title, book_path(book) %></td>
　　<td><%= book.body %></td>
　　<td><p>コメント件数：<%= book.book_comments.count %></p></td>
　　</tr>
　  <% end %>
　</tbody>
  </table>
</div>
</div>
</div>
