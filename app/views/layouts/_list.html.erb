<div class="profile-container">

<h3>User info</h3>

<%= attachment_image_tag user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg" %></br>

<table class="table table-striped">

  <tr><th>name</th><td><%= user.name %></td></tr>

  <tr><th>introduction</th><td><%= user.introduction %></td></tr>

</table>

</br>
      <%= link_to "", edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_19375" %>
</div>



<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

 <%= f.submit 'Create Book',class:"btn btn-success" %>



<% end %>