<h2>Editing Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%></br>
  <label for="inputBody">Introduction</label>
  <%= f.text_field :body, autofocus: true, id:"body", placeholder:"ボディー"%></br>
  <%= f.submit "Update Book",class:"btn btn-success" %>
<% end %>

<%= link_to "Show", book_path(@book) %> |
<%= link_to "Back", books_path %>


<% if flash[:notice] %>
   <div class="flash">
      <%= flash[:notice] %>
   </div>
<% end %>

<% if @book.errors.any? %>
   <%= @book.errors.count %>件のerrorが発生しました
   <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <%= "error" %>
   <% end %>
<% end %>
